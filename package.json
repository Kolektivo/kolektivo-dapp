{
  "name": "@kolektivo/dapp",
  "description": "A collection of institutional technologies that open up new opportunities for local communities to govern and finance their own regenerative economies.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kolektivo/dapp"
  },
  "author": "CL Cybernetix GmbH",
  "homepage": "./",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0 < 17"
  },
  "browser": {
    "http": false
  },
  "scripts": {
    "lint:js": "eslint src design-system test --ext .js,.ts",
    "lint:fix": "eslint src design-system test --fix",
    "lint:scss:fix": "stylelint \"src/**/*.scss\" \"design-system/**/*.scss\" --fix",
    "lint:scss": "stylelint \"src/**/*.scss\" \"design-system/**/*.scss\"",
    "lint:html": "htmlhint -c .htmlhintrc src design-system ",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:scss",
    "start": "cross-env NETWORK=alfajores webpack serve",
    "build": "cross-env NETWORK=mainnet rimraf dist && webpack --env production",
    "analyze": "rimraf dist && webpack --env production --analyze",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "e2e": "playwright test",
    "e2e:watch": "playwright test --watch",
    "vercel:deploy": "vercel --token $npm_config_token",
    "vercel:deploy:production": "vercel --prod --token $npm_config_token",
    "vercel:alias": "vercel alias set $npm_config_deployment $npm_config_branch --token $npm_config_token --scope $npm_config_scope"
  },
  "dependencies": {
    "@aurelia/i18n": "dev",
    "@aurelia/validation-html": "dev",
    "@material-design-icons/svg": "^0.11.4",
    "@metamask/detect-provider": "^1.2.0",
    "@microsoft/fast-components": "^2.30.6",
    "@microsoft/fast-element": "^1.10.2",
    "@walletconnect/web3-provider": "^1.7.8",
    "aurelia": "dev",
    "aurelia-fast-adapter": "^1.0.5",
    "chart.js": "^3.8.0",
    "ethers": "^5.6.9",
    "i18next-intervalplural-postprocessor": "^3.0.0",
    "moment-timezone": "^0.5.34",
    "util": "^0.10.3",
    "web3modal": "^1.9.8"
  },
  "devDependencies": {
    "@aurelia/testing": "dev",
    "@aurelia/webpack-loader": "dev",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cypress": "^9.6.1",
    "cypress-shadow-dom": "^1.4.1",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "html-loader": "^4.1.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.1.4",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.52.0",
    "sass-loader": "^13.0.0",
    "start-server-and-test": "^1.14.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-loader": "^9.3.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vercel": "^25.1.0",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-transform-stub": "^2.0.0",
    "@types/jest": "^28.1.1",
    "@aurelia/ts-jest": "dev",
    "@playwright/test": "^1.22.2"
  },
  "jest": {
    "testMatch": [
     "<rootDir>/test/unit/**/*.spec.ts", "<rootDir>/design-system/test/**/*.spec.ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": "@aurelia/ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "design-system/**/*.ts",
      "!src/**/*.d.ts",
      "!design-system/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}