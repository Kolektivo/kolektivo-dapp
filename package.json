{
  "name": "@kolektivo/dapp",
  "description": "A collection of institutional technologies that open up new opportunities for local communities to govern and finance their own regenerative economies.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kolektivo/dapp"
  },
  "author": "CL Cybernetix GmbH",
  "homepage": "./",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0 < 17"
  },
  "browser": {
    "http": false
  },
  "scripts": {
    "lint:js": "eslint src design-system test --ext .js,.ts",
    "lint:fix": "eslint src design-system test --fix",
    "lint:css": "sass-lint -c .sass-lint.yml \"src/**/*.scss\" \"design-system /**/*.scss\"",
    "lint:html": "htmlhint -c .htmlhintrc src design-system ",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "webpack serve",
    "build": "rimraf dist && webpack --env production",
    "analyze": "rimraf dist && webpack --env production --analyze",
    "test": "jest",
    "cypress": "CYPRESS_BASE_URL=https://kolektivo-dapp.vercel.app cypress run",
    "test:e2e": "cross-env CI=1 start-server-and-test start http://localhost:9000 cypress",
    "vercel:deploy": "vercel --token $npm_config_token",
    "vercel:deploy:production": "vercel --prod --token $npm_config_token",
    "vercel:alias": "vercel alias set $npm_config_deployment $npm_config_branch --token $npm_config_token --scope $npm_config_scope"
  },
  "dependencies": {
    "@aurelia/validation-html": "dev",
    "@material-design-icons/svg": "^0.11.4",
    "@microsoft/fast-components": "^2.30.6",
    "@microsoft/fast-element": "^1.10.2",
    "aurelia": "dev",
    "aurelia-fast-adapter": "^1.0.5",
    "chart.js": "^3.8.0",
    "html-loader": "^3.1.2"
  },
  "devDependencies": {
    "@aurelia/testing": "dev",
    "@aurelia/ts-jest": "dev",
    "@aurelia/webpack-loader": "dev",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cypress": "^9.6.1",
    "cypress-shadow-dom": "^1.4.1",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.17.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.1.4",
    "jest": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.52.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^13.0.0",
    "start-server-and-test": "^1.14.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vercel": "^25.1.0",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": [
        "@aurelia/ts-jest",
        {
          "defaultShadowOptions": {
            "mode": "open"
          }
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}