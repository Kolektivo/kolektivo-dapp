{
  "name": "@kolektivo/dapp",
  "description": "A collection of institutional technologies that open up new opportunities for local communities to govern and finance their own regenerative economies.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kolektivo/dapp"
  },
  "author": "CL Cybernetix GmbH",
  "homepage": "./",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0 < 17"
  },
  "browser": {
    "http": false
  },
  "scripts": {
    "lint:js": "eslint src design-system test --ext .js,.ts",
    "lint:fix": "eslint src design-system test --fix",
    "lint:scss:fix": "stylelint \"src/**/*.scss\" \"design-system/**/*.scss\" --fix",
    "lint:scss": "stylelint \"src/**/*.scss\" \"design-system/**/*.scss\"",
    "lint:html": "htmlhint -c .htmlhintrc src design-system ",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:scss",
    "dev": "npm run start",
    "start": "npm run start-alfajores",
    "start-celo": "cross-env KOL_NETWORK=Celo vite",
    "start-alfajores": "vite",
    "build": "npm run build-celo",
    "build-celo": "cross-env DOTENV_CONFIG_PATH=.env.production KOL_NETWORK=Celo rimraf dist && vite build",
    "build-celo-dev": "cross-env DOTENV_CONFIG_PATH=.env.production KOL_NETWORK=Celo rimraf dist && vite build --env development",
    "build-alfajores": "cross-env DOTENV_CONFIG_PATH=.env.production KOL_NETWORK=Alfajores rimraf dist && vite build",
    "build-alfajores-dev": "cross-env DOTENV_CONFIG_PATH=.env.production KOL_NETWORK=Alfajores rimraf dist && vite build --env development",
    "fetchContracts": "node scripts/fetchContracts.js",
    "test": "vitest -r src/",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "e2e": "playwright test",
    "e2e:watch": "playwright test --watch",
    "e2e:ci": "URL=$npm_config_url playwright test",
    "vercel:deploy": "vercel --token $npm_config_token",
    "vercel:deploy:production": "vercel --prod --token $npm_config_token",
    "vercel:alias": "vercel alias set $npm_config_deployment $npm_config_branch --token $npm_config_token --scope $npm_config_scope"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "rxjs": "^7.5.6",
    "@aurelia/i18n": "dev",
    "@aurelia/validation-html": "dev",
    "@celo-tools/celo-ethers-wrapper": "^0.3.0",
    "@material-design-icons/svg": "^0.11.4",
    "@metamask/detect-provider": "^1.2.0",
    "@walletconnect/web3-provider": "^1.7.8",
    "aurelia": "dev",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "chart.js": "^3.8.0",
    "cids": "^1.1.9",
    "ethers": "^5.6.9",
    "events": "^3.3.0",
    "i18next-intervalplural-postprocessor": "^3.0.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.10.4",
    "web3modal": "^1.9.8"
  },
  "devDependencies": {
    "sass": "^1.54.5",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "rollup-plugin-polyfill-node": "^0.10.2",
    "rollup-plugin-visualizer": "^5.8.0",
    "@rollup/plugin-inject": "^4.0.4",
    "rollup-pluginutils": "^2.8.2",
    "vite-tsconfig-paths": "^3.5.0",
    "@aurelia/testing": "dev",
    "@aurelia/ts-jest": "dev",
    "@playwright/test": "^1.22.2",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cross-env": "^7.0.3",
    "ethereum-abi-types-generator": "^1.3.2",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "happy-dom": "^6.0.4",
    "html-loader": "^4.1.0",
    "htmlhint": "^1.1.4",
    "http-browserify": "1.7.0",
    "https-browserify": "^1.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "rollup-plugin-html": "^0.2.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vercel": "^25.1.0",
    "vite": "latest",
    "vitest": "^0.21.1",
    "vitest-mock-extended": "^0.1.13",
    "vite-svg-loader": "^3.4.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/unit/**/*.spec.ts",
      "<rootDir>/design-system/test/**/*.spec.ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": "@aurelia/ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "design-system/**/*.ts",
      "!src/**/*.d.ts",
      "!design-system/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}