{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "rootDir": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src",
    "./*.ts",
    "eth-sdk"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/resource.d.ts",
  ]
}