{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "rootDir": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "./*.ts"
  ],
  "files": [
    "src/resource.d.ts"
  ]
}