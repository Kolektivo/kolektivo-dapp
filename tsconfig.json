{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "strictNullChecks": true,
    "rootDir": "./src",
    "paths": {
      "*": [
        "*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "stores/*": [
        "stores/*"
      ],
      "design-system/*": [
        "design-system/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "services/*": [
        "services/*"
      ],
      "value-converters/*": [
        "resources/value-converters/*"
      ],
      "elements/*": [
        "resources/elements/*"
      ],
    }
  },
  "include": [
    "test",
    "src",
  ],
  "files": [
    "src/resource.d.ts"
  ]
}